<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dateTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="18dp"
                android:text="date"
                android:layout_weight="2"
                />

            <EditText
                android:id="@+id/dateEv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:hint="input date"
                android:paddingLeft="12dp"
                android:layout_weight="5"
                />
            <Button
                android:id="@+id/btnChangeDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="btnChangeDateClicked"
                android:text="날짜 변경"
                android:layout_weight="2.5"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/incomeTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="18dp"
                android:text="income"
                android:layout_weight="2"
                />

            <TextView
                android:id="@+id/incomeEv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:hint="input income"
                android:paddingLeft="12dp"
                android:layout_weight="5"
                />
            <Button
                android:id="@+id/btnSelectIncome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="수입/지출"
                android:layout_weight="2.5"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/categoryTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="18dp"
                android:text="category"
                android:layout_weight="2"
                />

            <EditText
                android:id="@+id/categoryEv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:hint="input category"
                android:paddingLeft="12dp"
                android:layout_weight="5"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="2.5"
                android:visibility="invisible"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/contentsTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="18dp"
                android:text="contents"
                android:layout_weight="2"
                />

            <EditText
                android:id="@+id/contentsEv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:hint="input contents"
                android:paddingLeft="12dp"
                android:layout_weight="5"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="2.5"
                android:visibility="invisible"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/priceTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="18dp"
                android:text="price"
                android:layout_weight="2"
                />

            <EditText
                android:id="@+id/priceEv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:hint="input price"
                android:inputType="number"
                android:paddingLeft="12dp"
                android:layout_weight="5"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="2.5"
                android:visibility="invisible"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/etcTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="18dp"
                android:text="etc"
                android:layout_weight="2"
                />

            <EditText
                android:id="@+id/etcEv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:hint="input etc"
                android:paddingLeft="12dp"
                android:layout_weight="5"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="2.5"
                android:visibility="invisible"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/receiptTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="18dp"
                android:text="receipt"
                android:layout_weight="2"
                />

            <TextView
                android:id="@+id/receiptNameTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:hint="input receipt"
                android:inputType="none"
                android:paddingLeft="12dp"
                android:layout_weight="5"/>

            <Button
                android:id="@+id/receiptSelect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="사진 선택"
                android:layout_weight="2.5"/>

        </LinearLayout>








        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            >
            <Button
                android:id="@+id/changeBtn"
                android:text="change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:onClick="changeBtnClicked"
                />

            <Button
                android:id="@+id/deleteBtn"
                android:text="delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:onClick="deleteBtnClicked"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/receiptView"/>

    </LinearLayout>




</ScrollView>